<div class="container-fluid">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Projects", projects_path %></li>
      <li class="breadcrumb-item"><%= link_to @project.name, @project %></li>
      <li class="breadcrumb-item active" aria-current="page">Documents</li>
    </ol>
  </nav>
  <div class="conteiner ">
    <%= link_to 'New document', new_project_document_path(@project),  data: { turbo: true, turbo_frame: 'modal' }, class: 'btn btn-primary'  %>
  </div>
  <div class="conteiner m-3">
    <% @documents.each do |document| %>
      <div class="row text-primary my-2 mx-0 p-2 border border-primary border-2 rounded-2 position-relative">
        <div class="col">
          <h5 class="mt-0"><%= document.name%></h5>
        </div>
        <div class="col-2">
          <%= link_to "Show", "#", class: "btn btn-outline-danger", type: "button"%>
        </div>
      </div>
    <% end %>
  </div>
</div>