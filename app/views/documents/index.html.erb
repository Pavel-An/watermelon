<div class="container-fluid">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Projects", projects_path %></li>
      <li class="breadcrumb-item"><%= link_to @project.name, @project %></li>
      <li class="breadcrumb-item active" aria-current="page">Documents</li>
    </ol>
  </nav>
  <div class="conteiner m-2">
    <%= link_to 'New document', new_project_document_path(@project),  data: { turbo: true, turbo_frame: 'modal' }, class: 'btn btn-primary'  %>
  </div>
  <div class="conteiner list-group m-2">
    <% @documents.each do |document| %>
      <div class="list-group-item list-group-item-action list-group-item-light m-1 rounded-2 border-1">
        <div class="hstack">
          <div class="p-1">
            <h5 class="mt-0"><%= document.name%></h5>
          </div>
          <div class="p-1 ms-auto">
            <%= link_to "Show", document_path(document), class: "btn btn-outline-primary", type: "button"%>
          </div>
          <div class="p-1">
            <%= link_to "Settings", "#", class: "btn btn-outline-primary", type: "button"%>
          </div>
 
        </div>
      </div>
    <% end %>
  </div>
</div>