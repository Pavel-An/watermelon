<div class="row d-flex justify-content-center">
  <div class="col col-lg-9 mb-4 mb-lg-0">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Profile", user_path(current_user)%></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
      </ol>
    </nav>
    <%= form_with model: @user do |form|%>
      <div class="card">
        <div class="card-body p-4">
          <div class="row g-0 mb-2">
            <h6 class="text-primary fw-semibold" >Avatar</h6>
            <hr class="mt-0 mb-2 border-primary">
            <div class="col-md-4 text-center">
              <i class="bi bi-card-image" style="font-size: 8rem; color: cornflowerblue;"></i>
            </div>
            <div class="col-md-8 ml-2">
              <h6>Avatar</h6>
            </div>
          </div>
          <div class="row g-0 mb-2">
            <h6 class="text-primary fw-semibold" >Full name</h6>
            <hr class="mt-0 mb-2 border-primary">
            <div class="row mb-3">
              <%= form.label :name, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="row mb-3">
              <%= form.label :surname, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.text_field :surname, class: "form-control" %>
              </div>
            </div>
            <div class="row mb-3">
              <%= form.label :patronymic, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.text_field :patronymic, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="row g-0 mb-2">
            <h6 class="text-primary fw-semibold" >Ð¡ontacts</h6>
            <hr class="mt-0 mb-2 border-primary">
            <div class="row mb-3">
              <%= form.label :email, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.text_field :email, class: "form-control" %>
              </div>
            </div>
            <div class="row mb-3">
              <%= form.label :number, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <% unless  @user.phones.blank? %>
                  <%= form.fields_for :phones do |phone_numbers| %>
                    <%= phone_numbers.text_field :number, class: "form-control mb-1" %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="row g-0 mb-2">
            <h6 class="text-primary fw-semibold" >Company</h6>
            <hr class="mt-0 mb-2 border-primary">
            <div class="row mb-3">
              <%= form.label :post, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.select :post, posts_list, { selected: @user.post_id } , { class: "form-select" } %>
              </div>
            </div>
            <div class="row mb-3">
              <%= form.label :department, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.select :department, departments_list, { selected: @user.department_id }, { class: "form-select" } %>
              </div>
            </div>

            


             
          </div>
        </div>
        <div class="card-footer">
          <button type="button" class="btn btn-primary">Update</button>
        </div>
      </div>
    <% end %>
  </div>
</div>

    


