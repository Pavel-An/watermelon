<h6 class="text-primary fw-semibold" >Ğ¡ontacts</h6>
<hr class="mt-0 mb-2 border-primary">
<div class="row mb-3">
  <%= form.label :email, class: "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
    <%= form.text_field :email, class: "form-control" %>
  </div>
</div>
<div class="row mb-3">
  <%= form.label :numbers, class: "col-sm-2 col-form-label" %>
  <div class="col-sm-10" >
    <div class="row">
      <%= render partial: "users/partials/contacts/phones/edit", locals: { form: form } %>
    </div>
    <div class="row" data-nested-fields-target="fields">
    </div>
    <div class="row">
      <div class="col-10">
        <%= button_tag  data: {action: "nested-fields#append"},  type: "button",  class: "btn  btn-outline-primary mb-1" do %>
          <i class="bi bi-plus-circle-fill"> Add new number</i>
        <% end %>
      </div>
    </div>
    <template data-nested-fields-target="template">   
      <%= render partial: "users/partials/contacts/phones/new", locals: { form: form } %>
    </template>
  </div>
</div>
