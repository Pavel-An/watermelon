<%= turbo_frame_tag block do %>
  <div class="row my-2 mx-0">
    <%= fields_for :document_blocks, [document, block], index: block.id do |block_form| %>
      <% if block.block_type == "h1" %>
        <%= block_form.label :content, block.block_type, class: "form-label" %>
        <%= block_form.text_field :content, class: "form-control" %>
      <% elsif block.block_type == "h2" %>
        <%= block_form.label :content, block.block_type, class: "form-label" %>
        <%= block_form.text_field :content, class: "form-control" %>
      <% elsif block.block_type == "text" %>
        <%= block_form.label :content, block.block_type, class: "form-label" %>
        <%= block_form.text_field :content, class: "form-control" %>
      <% end %>
    <% end %>
  </div>
<% end %>
